  z-index 1

.mint-loadmore
  overflow initial

.mint-loadmore-top
  height 50px

  .top_tip
    width 100%
    top 107px
    z-index 1

  .mint-loadmore
    overflow initial

  .mint-loadmore-top
    height 50px
    position relative

    img
      position absolute
      top 10px
      left 3.866667rem
      width 25px
      height 25px

    .txt
      padding-left 30px
      font-size 13px
      color #29354D

    .loading-txt
      padding-left 36px

    .icon
      display inline-block
      position absolute
      top 10px

    .reush_tip
      position absolute
      left 0
